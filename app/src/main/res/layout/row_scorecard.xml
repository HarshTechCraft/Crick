<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3,4,5,6">
    <TableRow android:gravity="center">
        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.9">
            <TextView
                android:textSize="16sp"
                android:gravity="start"
                android:id="@+id/bat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanzid Hasan"
                android:maxLines="1"/>
            <TextView
                android:textSize="12sp"
                android:gravity="start"
                android:id="@+id/dismissal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Caught by XYZ"
                android:maxLines="1"/>
        </LinearLayout>
        <TextView
            android:textSize="14sp"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/runs"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="17"
            android:maxLines="1"
            android:layout_weight="0.7"/>
        <TextView
            android:textSize="14sp"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/balls"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="18"
            android:maxLines="1"
            android:layout_weight="0.7"/>
        <TextView
            android:textSize="14sp"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/fours"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:maxLines="1"
            android:layout_weight="0.7"/>
        <TextView
            android:textSize="14sp"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/sixs"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:maxLines="1"
            android:layout_weight="0.7"/>
        <TextView
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/sr"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="94.44"
            android:maxLines="1"
            android:layout_weight="1"/>
    </TableRow>
</TableLayout>